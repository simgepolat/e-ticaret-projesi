@model ProductListViewModel

<div class="row">
    <div class="col-md-12">
        <h1>Admin Ürünler</h1>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td style="width: 100px;">Resim</td>
                    <td>Ad</td>
                    <td style="width: 20px;">Fiyat</td>
                    <td style="width: 150px;"></td>
                </tr>
            </thead>
            <tbody>
                @if(Model.Products.Count>0)
                {
                       @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>@item.ProductId</td>
                                <td><img src="~/img/@item.ImageUrl" width="80"></td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>
                                    <a href="/admin/products/@item.ProductId" class="btn btn-primary btn-sm mr-2">Düzenle</a>
                                    <a href="#" class="btn btn-danger btn-sm">Sil</a>
                                </td>
                        </tr>
                        }
                }else{
                    <div class="alert alert-warning">
                        <h3>Ürün Yok!</h3>
                    </div>
                }

             
            </tbody>
        </table>
    </div>
</div>