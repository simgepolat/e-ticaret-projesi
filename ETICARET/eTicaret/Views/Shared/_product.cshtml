@model Product
<div class="card mb-4 center" style="min-height: 450px; ">
    <img class="card-img-top" src="~/img/@Model.ImageUrl" alt="">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <small class="text-muted">
            <i class="fas fa-lira-sign"></i>@Model.Price
        </small>

    </div>
    <div>
        <div class="card-footer text-center">
            <a asp-controller="shop" asp-action="Details" asp-route-url="@Model.Url" class="btn btn-success btn-sm ">incele</a>
            <a asp-controller="shop" asp-action="addtocart" asp-route-url="@Model.ProductId" class="btn btn-success btn-sm ">sepete ekle</a>
        </div>
    </div>
</div>