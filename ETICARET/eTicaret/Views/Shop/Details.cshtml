@model Product

<div class="row ">
    <div class="col-md-3">
        <img src="~/img/@Model.ImageUrl" class="img-fluid">
    </div>
    <div class="col-md-9" >
        
            <h1 class="mb-3">@Model.Name</h1>
             <hr>
            <a href="#" class="btn btn-link p-0 mb-36"></a>
            <div class="mb-3">
                <h4 class="text-primary mb-3"> <i class="fas fa-lira-sign"></i>@Model.Price</h4>
                <button type="submit" class="btn btn-primary btn-lg"> Sepete Ekle</button>
            </div>
            
          
            <p class="card-text">
                <small class="text-muted">2 weeks ago</small>
            </p>

            
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h3>Ürün Bilgisi</h3>
        <p class="p-3">@Model.Description</p>
    </div>
</div>
